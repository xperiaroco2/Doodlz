<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lineWidthDialogGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    android:useDefaultMargins="true">

    <ImageView
        android:id="@+id/widthimageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_imageview_height"
        android:layout_gravity="fill_horizontal"
        android:contentDescription="@string/line_imageview_description"
        app:srcCompat="@mipmap/ic_launcher" />

    <SeekBar
        android:id="@+id/widthSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:max="50" />
</GridLayout>